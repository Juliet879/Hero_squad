{{#partial "content"}}
        <section class="landing-pg"style="background-image:url('images/YES.jpg');background-repeat:no-repeat;background-size:cover;padding:2%;padding-left:7%;">


        <div class="squad">
            <div id="newMember">
                <p class="close">&cross;</p>
                <h2>Choose Squad Members</h2>

                {{#each heroes}}
                    <div class="hero-item" style="color:white;">
                        <div class="hero-detail">
                            <p>Name: {{name}}</p>
                            <p>Super power: {{ power }}</p>
                           <button> <a class="btns" href="/squad/new/{{id}}">Add To Squad</a></button>
                    </div>
                {{/each}}
            </div>
        <h6 style="font-size:20px">
            <a class="btns" href="/squad-form">Create Your Squad</a>
            <br><br>
            {{#if squads}}
                AVAILABLE SQUADS
            </h6>
                {{#each squads}}
                    <div class="squad-cont" style="font-size:17px;">
                        <img src="" alt="">
                        <div>
                            <h1>{{ squadName }} </h1>
                            <p>Id: {{squadId}}</p>
                            <p>Purpose: {{cause}}</p>
                            <p>Max participants: {{ size }}</p>
                            <br><br>
                            <h6>MEMBERS</h6>
                            <a class="btns" href="/new/member/{{squadId}}"> <button class="addMember add-btn" >Add New Member</button></a>
                            {{#each squadMembers}}
                                <div class="member-cont">
                                    <h5>Name: {{this.name}}</h5>
                                    <h5>Power: {{power}}</h5>
                                    <button class="btns">Remove</button>
                                </div>
                            {{/each}}


                        </div>
                    </div>
                {{/each}}
            {{else}}
                <h2>Please create a squad to continue</h2>
            {{/if}}
        </div>
        </div>
    </section>
{{/partial}}
{{#partial "footer"}}
{{/partial}}
{{> layout.hbs}}
